<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="12dp"
                />
            <gradient
                android:angle="0"
                android:endColor="#037ef3"
                android:startColor="#1da2ff"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />

        </shape>
    </item>

    <item android:state_enabled="true"
        android:top="10dp" android:right="10dp" android:bottom="10dp"
        android:left="10dp">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="12dp"
                />
            <gradient
                android:angle="0"
                android:endColor="#037ef3"
                android:startColor="#1da2ff"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <stroke
                android:width="1dp"
                android:color="@color/white"
                />
        </shape>
    </item>

</layer-list>